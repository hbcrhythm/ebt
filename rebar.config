{erl_opts, [
%%     {d, 'EBT_TEST', "transforms"},    %　打开输出forms到文件, 默认路径为"transforms"
    debug_info,
    warnings_as_errors
]}.

{plugins, [rebar3_auto]}.

{erl_first_files, ["src/ebt_node.erl", "src/ebt_transform.erl"]}.

{clean_files, ["transform/*.txt"]}.

{deps, [
	{rfc4627, {git, "https://github.com/tonyg/erlang-rfc4627.git", {branch, "master"}}}
]}.

%% == xref ==
{xref_warnings, false}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
%%     exports_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.